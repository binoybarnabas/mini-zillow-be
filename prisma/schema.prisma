generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or mysql/sqlite
  url      = env("DATABASE_URL")
}

// ---- Test.prisma ----
model Test {
  id       Int    @id @default(autoincrement())
  title    String
  content  String
  authorId Int
}

// ---- User.prisma ----
model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  createdAt DateTime @default(now())
}
